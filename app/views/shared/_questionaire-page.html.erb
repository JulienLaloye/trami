<div class="questionaire-container">
  <div class ="navbar-login-text d-flex align-items-center">
    <p class="main-font weight-300 mb-0">Welcome back <%= current_user.username %>!</p>
  </div>
  <div class="trami-img-bg"></div>
  <div class="d-flex flex-column align-items-center">
    <h1 data-controller="wave" class="elementToFadeInAndOut ques-welcome text-black-gray"></h1>
    <div class="div-transparent">
      <%= form_with url: rooms_path, method: :get do |f| %>
        <div data-controller="last-slide" id="carouselExampleCaptions" class="fadein-3 mt-5 carousel carousel-1 slide">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active d-none" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" class="d-none" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" class="d-none" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner carousel-inner-1">
            <div class="carousel-item active">
              <div class="mt-2 carousel-content carousel-content-1">
                <div class="question-1 text-center">
                  <h1 class="main-font weight-300 font-30 text-black-gray">What's your mood?</h1>
                </div>
                <div data-controller="questionaires questionaires-status" class="mood-card-wrap d-flex flex-column align-items-center">
                  <div class="mood-card-1 d-flex">
                    <div id="Dreamy" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="mood-card-dreamy mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.first.name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Energetic" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="mood-card-energetic mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.second.name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Relax" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-relax mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.third.name.capitalize, for:"relax", value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Neutral" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-neutral mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.fourth.name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Social" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-social mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.fifth.name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Competitive" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-competitive mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.all[5].name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                  </div>
                  <div class="mood-card-2 mt-4 d-flex">
                    <div id="Adventurous" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood"class="pt-2 mood-card-adventurous mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.all[6].name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Chillin" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-chillin mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.all[7].name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Creative" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-creative mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.all[8].name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Intellectual" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-intellectual mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.all[9].name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Exploratory" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-exploratory mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.all[10].name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                    <div id="Mindful" data-questionaires-target="moodElement" data-action="click->questionaires#mood click->questionaires-status#removeMood" class="pt-2 mood-card-mindful mood-card d-flex justify-content-center flex-column align-items-center">
                      <%= f.label :mood, Mood.all[11].name.capitalize, value: params[:mood], class: "main-font text-black-gray" %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="carousel-item">
              <div class="ques-location mt-3 d-flex flex-column align-items-end carousel-content carousel-content-1">
                <div class="mt-3 mb-5 text-center d-flex justify-content-center align-items-center">
                  <div class="question-2">
                    <h1 class="main-font weight-300 mb-0 mx-5 font-28 text-black-gray">Where's your current location?</h1>
                  </div>
                  <div class="location-bar d-flex justify-content-center align-items-center">
                    <%= f.select :address, Room.all.pluck(:address).uniq, value: params[:address], class: "city-location main-font" %>
                  </div>
                </div>
                <div class="d-flex mt-5 justify-content-center align-items-center">
                  <h1 class="main-font mb-0 mx-5 weight-300 font-28 text-black-gray">When do you want to go out?</h1>
                  <div class="date-input d-flex justify-content-center align-items-center"><%= f.text_field :date, data: { controller: "flatpickr" }, placeholder: "from - to", class: "date date-location main-font"%></div>
                </div>
              </div>
            </div>
            <div id="last" data-action="click->last-slide#fired" class="carousel-item last-slide">
              <div class="ques-status carousel-content carousel-content-1">
                <div class="mt-2 d-flex flex-column align-items-center">
                  <h5 class="main-font weight-300 font-18 text-black-gray mt-2">Last step...</h5>
                  <div class="question-3 text-center">
                    <h1 class="main-font weight-300 font-30 text-black-gray">Please select who you are?</h1>
                  </div>
                  <div data-controller="questionaires-lotr questionaires-ll" class="ques-3-choice d-flex justify-content-around">
                    <div class="status-container d-flex flex-column align-items-center">
                      <h1 class="mb-3 ques-3-icon">‚õ∫Ô∏è</h1>
                      <div data-questionaires-ll-target="boo" data-questionaires-lotr-target="ques" id="3" data-questionaires-ll-status-param="I'm a local" data-action="click->questionaires-lotr#status click->questionaires-ll#fire" data-questionaires-lotr-status-param="local" class="ques-3-ans">
                        <h5 class="mb-0"><%= f.label :status, "I'm a local", class: "mx-3 main-font weight-300 font-18 text-black-gray mb-0" %></h5>
                      </div>
                    </div>
                    <div class="or-text d-flex justify-content-center pt-5">
                      <h5 class="weight-300 main-font text-black-gray font-18">or</h5>
                    </div>
                    <div class="status-container d-flex flex-column align-items-center">
                      <h1 class="mb-3 ques-3-icon">üöÄ</h1>
                      <div data-questionaires-ll-target="boo" data-questionaires-lotr-target="ques" id="1" data-questionaires-ll-status-param="I'm a traveller" data-action="click->questionaires-lotr#status click->questionaires-ll#fire" data-questionaires-lotr-status-param="traveller" class="ques-3-ans">
                        <h5 class="mb-0"><%= f.label :staus, "I'm a traveller", class: "mx-1 main-font weight-300 font-18 text-black-gray mb-0" %></h5>
                      </div>
                    </div>
                  </div>
                  <div class="div-explore">
                    <%= f.submit "Explore", class: "explore-btn main-font weight-400" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <button data-last-slide-target="button" class="carousel-control-next round-button-next ques-next-btn" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span data-last-slide-target="sign" class="b1 trami-font button-content" aria-hidden="true">‚Üí</span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>
