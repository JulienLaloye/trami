<div class="navbar navbar-expand-sm d-flex justify-content-between">
    <div class="d-flex align-items-center trami-div">
      <h1 class="font-48"><%= link_to "Trami", root_path, class: "trami-font font-logo" %></h1>
    </div>
    <div class="navbar-nav nav-style d-flex justify-content-end" style = "width:100%" >
      <% if user_signed_in? %>
        <div class="nav-item d-flex" id="log-out">
          <div class="d-flex align-items-center">
              <%= link_to "Dashboard",dashboard_path, class: "dashboard-btn px-3 weight-300" %>
          </div>
          <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "link-secondary smooth nav-link" %>
        </div>
      </div>
      <% else %>
      <div class="navbar-nav nav-style d-flex justify-content-between" style = "width:65%">
        <div class ="navbar-header-text d-flex align-items-center">
            <p class="main-font weight-300">Sign up with us and ready to board ✈️</p>
        </div>
        <div class="nav-item d-flex align-items-center">
          <div class="d-flex ms-auto align-items:end justify-content-end">
            <div class="d-flex align-items-center">
              <%= link_to "Sign up",new_user_registration_path, data: { turbo: false }, class: "signup-btn px-3 weight-300" %>
            </div>
            <%= link_to "Login", new_user_session_path, class: "login-btn weight-300" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>
