<div class="main-container d-flex justify-content-center" id="dashboard-height" style="background-color: <%= @user.mood.color%>;  background-image: linear-gradient(rgba(0, 0, 0, .1) .1em, transparent .1em), linear-gradient(90deg, rgba(0, 0, 0, .1) .1em, transparent .1em);
  background-size: 2em 2em;">
  <div class="dashboard container">
    <%# Upcoming-Rooms-Swiper %>
    <div class="row upcoming-rooms my-3 mb-0">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
          <h1>My Dashboard</h1>
          <%= render "shared/useravatar", user: @user %>
        </div>

        <div class="d-flex justify-content-start">
          <div class="d-flex align-items-center px-0">
            <h2 class="mb-0 me-4 weight-300"># My upcoming rooms</h2>
            <%= link_to "+", rooms_path, class: "round-button button-content weight-300" %>
          </div>
        </div>

        <%= render 'upcomingrooms' %>
      </div>
    </div>
    <%# Reviews & My-Rooms %>
    <div class="row my-reviews-and-rooms d-flex justify-content-between mb-5">

      <div class="col-6 reviews">
        <div>
          <h2 class="my-2 review-height d-flex align-items-center"># My reviews</h2>
          <p>You have no reviews yet.</p>
        </div>
      </div>

      <div class="col-6 my-rooms">

        <% if @my_rooms.present? %>
          <div class="d-flex justify-content-start">
            <div class="d-flex align-items-center px-0 my-2">
              <h2 class="mb-0 me-4 weight-300"># My rooms</h2>
              <button class="round-button">
                <%= link_to "+", new_room_path, class:"button-content" %>
              </button>
            </div>
          </div>
        <% end %>

        <%= render 'myrooms' %>
      </div>

    </div>

  </div>
</div>
