<div class="dashboard container" style="background-image: linear-gradient(rgba(0, 0, 0, .1) .1em, transparent .1em), linear-gradient(90deg, rgba(0, 0, 0, .1) .1em, transparent .1em);
  background-size: 2em 2em;">
  <%# Upcoming-Rooms-Swiper %>
  <div class="row upcoming-rooms my-3">

    <div class="d-flex justify-content-between align-items-center">
      <h1>My Dashboard</h1>
      <%= render "shared/useravatar", user: @user %>
    </div>

    <div class="d-flex justify-content-start">
      <div class="d-flex align-items-center px-0">
        <h2 class="mb-0 me-4 weight-300"># My upcoming rooms</h2>
        <button class="round-button">
          <%= link_to "+", rooms_path, class: "button-content weight-300" %>
        </button>
      </div>
    </div>

    <%= render 'upcomingrooms' %>
  </div>
  <%# Reviews & My-Rooms %>
  <div class="row my-reviews-and-rooms d-flex justify-content-between mb-5">

    <div class="col-6 reviews mb-2">
      <h2 class="my-3"># My reviews</h2>
      <p>You have no reviews yet.</p>
    </div>

    <div class="col-6 my-rooms">
      <% if !@my_rooms.empty? %>
        <div class="d-flex justify-content-between mb-2">
          <h2 class="my-3"># My rooms</h2>
          <button class="round-button my-2">
            <%= link_to "+", new_room_path, class: "button-content" %>
          </button>
        </div>
          <% @my_rooms.each do |myroom| %>
            <%= link_to room_path(myroom), class: "text-decoration-none" do %>
            <li class="my-room" style="background-color: <%= myroom.activity.mood.color%>">
              <div>
                <%= myroom.title %>
                <br>
                <%= myroom.date.strftime("%b %d, %Y") %>
              </div>
              <div class="participation d-flex align-items-center">
                <p class="mb-0">Participants: <%= myroom.participants %> </p>
              </div></li>
            <% end %>
          <% end %>
      <% else %>
        <h2 class="my-3"># My rooms</h2>
        <p>You have no rooms created yet.</p>
        <button class="start-button my-3">
          <%= link_to "Create a room", new_room_path, class: "button-content" %>
        </button>
      <% end %>
    </div>

  </div>

</div>
