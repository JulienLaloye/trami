<div class="swiper swiper-1 roomcardSwiper" data-controller="roomcard-swiper">
        <div class="swiper-wrapper swiper-wrapper-1">
          <% @rooms.each do |room| %>
              <div class="card text-center w-90 mb-5">
                <%= link_to room_path(room), class: "text-decoration-none" do %>
                <div class="row d-flex">
                    <div class="card-body room-slide-card d-flex " style="background-color: <%= room.activity.mood.color%>">
                      <div class= "card-header col" ><%= room.title %></div>
                      <br>
                      <div class= "card-description col"><%=room.description.capitalize %> </div>
                      <div class= "card-activity col"><%= room.activity.mood.name.capitalize %></div>
                       <div class ="card-timeline col" > üóìÔ∏è  <%= room.date.strftime('%d %b. %y') %></div>
                      <div class=" card-footer room-info-banner d-flex flex-container justify-content-around">
                        <div class ="col" >Age: <%= room.min_age %> - <%= room.max_age %></div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
      </div>
