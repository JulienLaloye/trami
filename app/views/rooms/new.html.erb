<div class="main-container">
  <h2 class="d-flex justify-content-center"> Create a new room! </h2>
  <div class = "container" data-controller = "toggle-new">
    <h4 class="d-flex justify-content-center"> How do you feel for this event?</h4>
        <% Mood.all.each do |mood| %>
          <div data-action="click->toggle-new#fire" class = "search-btn"><%= mood.name.capitalize %></div>
        <% end %>
      <div data-toggle-new-target="togglableElement" class="d-none">
        <%= render "newdescriptionform", room: @room %>
      </div>
  </div>
</div>
