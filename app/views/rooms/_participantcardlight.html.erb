<div class="avatar-decline-accept">
  <div class="small-avatar-container">
    <!-- Modal Trigger Button -->
    <button class="avatar-image" style="border: none; background: none; padding: 0; margin: 0;" data-toggle="modal" data-target="#avatarModal">
      <!-- Ensure the image_tag helper generates the correct image source -->
      <!-- Replace `user.avatar.picture` with the actual image source -->
      <%= image_tag(user.avatar.picture, alt: user.avatar.personality, class: "avatar w-100", style: "border:#{user.mood.color}  5px solid;")%>
    </button>

    <!-- Modal Structure -->
    <div class="modal fade" id="avatarModal" tabindex="-1" role="dialog" aria-labelledby="avatarModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="avatarModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <!-- Modal body content -->
            blablalblale
          </div>
        </div>
      </div>
    </div>

    <!-- Avatar Text -->
    <div class="avatar-text">
      <h3><%= user.username %></h3>
    </div>
    <!-- Avatar Gender -->
    <div class="avatar-gender">
      <!-- Ensure the correct gender image is displayed -->
      <%= image_tag("#{user.gender}.png", alt: user.avatar.personality, class: "gender-avatar")%>
    </div>
  </div>
  <% if user == @room.user %>
    <div class="button-container">
      <div class="creator-pin">Creator</div>
    </div>
  <% end %>
</div>
